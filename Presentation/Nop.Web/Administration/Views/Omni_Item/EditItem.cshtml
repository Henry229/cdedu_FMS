@model Nop.Admin.Models.Omni_Item.ItemModel
@{
    //page title
    ViewBag.Title = T("Admin.Omni_Item.Items.EditItemDetails").Text;
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-sales.png")" alt="" />
            @T("Admin.Omni_Item.Items.EditItemDetails") @Html.ActionLink("(" + T("Admin.Omni_Item.Items.BackToList") + ")", "ItemList")
        </div>
        <div class="options">
            <input type="submit" name="save" class="k-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="k-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="item-delete" class="k-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateItem", Model)
}
@Html.DeleteConfirmation("item-delete")